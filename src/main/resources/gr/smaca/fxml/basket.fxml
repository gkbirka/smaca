<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox fx:id="root" stylesheets="@../css/embedded/basket.css" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="gr.smaca.basket.BasketView">
   <children>
      <TableView fx:id="products" prefHeight="400.0" prefWidth="600.0">
         <columns>
            <TableColumn fx:id="name" editable="false" minWidth="-1.0" prefWidth="-1.0" text="%basket.table.column.name" />
            <TableColumn fx:id="category" editable="false" minWidth="-1.0" prefWidth="-1.0" text="%basket.table.column.category" />
            <TableColumn fx:id="price" editable="false" minWidth="-1.0" prefWidth="-1.0" text="%basket.table.column.price" />
         </columns>
         <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
         </columnResizePolicy>
      </TableView>
      <HBox fx:id="actions" prefHeight="100.0" prefWidth="200.0">
         <children>
            <Button fx:id="scan" mnemonicParsing="false" text="%basket.button.scan">
               <HBox.margin>
                  <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
               </HBox.margin></Button>
            <Button fx:id="purchase" mnemonicParsing="false" text="%basket.button.purchase">
               <HBox.margin>
                  <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
               </HBox.margin></Button>
         </children>
      </HBox>
   </children>
</VBox>
